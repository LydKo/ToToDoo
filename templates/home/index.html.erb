<h1> ToDo-Liste </h1>

<h3> Was gibts zu tun? </h3>

<%if user%>
<form action='/tasks/create' method='POST'>
  Schreibs hier auf: <input name="task" autofocus="true"/> 
  <!-- autofocus = damit das Eingabefeld aktiv bleibt-->
  <!-- Form = Formular-->

  <input type="submit" value="Bestätigen" />
</form>

<form method="GET" action="/">
<button name="ABC">Alphabetisch</button>
<button name="newest">Aktualität</button>
</form>

<ul>
  <% tasks.each do |task| %>
  	<li>
  		<form action="/tasks/delete" METHOD="POST">
  		<%= h(task.name) %>
  		<input type="hidden" value= "<%=task.id%>" name= "task_id">
  		<!-- hidden: sendet versteckte Dateien mit-->
  		<button> X </button>
  	</form>
  </li>
  <% end %>
</ul>
<% end %>
